#<? cfg paf policy ?>
#
# default policy for makeBlurredCoadd.py example

detectSourcesPolicy: {
    minPixels:1 
    thresholdValue: 3
    thresholdType: "stdev"
    thresholdPolarity: "positive"
    psfPolicy: {
        algorithm: "DoubleGaussian"
        width: 15
        height: 15
        #5*/(2*sqrt(2*log(2)))
        parameter: 3.22195985
    }
}

measureSourcesPolicy: { 
    centroidAlgorithm: "SDSS"
    shapeAlgorithm: "SDSS"
    photometryAlgorithm: "NAIVE"
    apRadius: 3.0
    psfPolicy: {
        algorithm: "DoubleGaussian"
        width: 15
        height: 15
        #5*/(2*sqrt(2*log(2)))
        parameter: 3.22195985
    }
}

fitPsfPolicy: {
    fluxLim: 1000
    sizeCellX: 512
    sizeCellY: 512
    nStarPerCell: 3
    kernelSize: 21
    nEigenComponents: 2
    spatialOrder: 1
    nStarPerCellSpatialFit: 5
    tolerance: 0.1
    reducedChi2ForPsfCandidates: 2.0
    nIterForPsf: 3
}